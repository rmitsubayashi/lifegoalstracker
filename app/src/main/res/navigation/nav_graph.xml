<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/mainViewPagerFragment">
    <fragment
        android:id="@+id/mainViewPagerFragment"
        android:name="com.lifegoaltracker.views.visions.view.MainViewPagerFragment"
        android:label="Main"
        tools:layout="@layout/fragment_main_view_pager">
        <action
            android:id="@+id/action_mainViewPagerFragment_to_addEditVisionFragment"
            app:destination="@id/addEditVisionFragment"/>
    </fragment>
    <fragment
        android:id="@+id/goalListFragment"
        android:name="com.lifegoaltracker.views.goalList.view.GoalListFragment"
        android:label="Goals"
        tools:layout="@layout/fragment_goal_list">
        <action
            android:id="@+id/action_goalListFragment_to_addEditGoalFragment"
            app:destination="@id/addEditGoalFragment"/>
    </fragment>
    <fragment
        android:id="@+id/addEditGoalFragment"
        android:name="com.lifegoaltracker.views.addEditGoal.view.AddEditGoalFragment"
        android:label="Add/Edit"
        tools:layout="@layout/fragment_add_edit_goal"/>
    <fragment
        android:id="@+id/visionsFragment"
        android:name="com.lifegoaltracker.views.visions.view.VisionFragment"
        android:label="Visions"
        tools:layout="@layout/fragment_vision">
        <action
            android:id="@+id/action_visionsFragment_to_visionDetailsFragment"
            app:destination="@id/visionDetailsFragment"/>
        <action
            android:id="@+id/action_visionsFragment_to_addEditVisionFragment"
            app:destination="@id/addEditVisionFragment"/>
    </fragment>
    <fragment
        android:id="@+id/visionDetailsFragment"
        android:name="com.lifegoaltracker.views.visionDetails.view.VisionDetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_vision_details">
        <action
            android:id="@+id/action_visionDetailsFragment_to_addEditGoalFragment"
            app:destination="@id/addEditGoalFragment"/>
    </fragment>
    <fragment
        android:id="@+id/addEditVisionFragment"
        android:name="com.lifegoaltracker.views.addEditVision.view.AddEditVisionFragment"
        android:label="Add/Edit"
        tools:layout="@layout/fragment_add_edit_vision"/>
    <fragment
        android:id="@+id/goalHistoryFragment"
        android:name="com.lifegoaltracker.views.goalHistory.view.GoalHistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_goal_history"/>
    <fragment
        android:id="@+id/addVisionFragment"
        android:name="com.lifegoaltracker.views.visions.view.AddVisionFragment"
        android:label="AddVision"
        tools:layout="@layout/fragment_add_vision"/>
</navigation>